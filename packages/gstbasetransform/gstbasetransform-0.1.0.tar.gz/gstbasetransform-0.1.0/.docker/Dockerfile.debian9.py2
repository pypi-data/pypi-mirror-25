FROM debian:stretch

ENV LANG C.UTF-8

RUN apt-get update && apt-get install --no-install-recommends -y \
    gir1.2-glib-2.0 \
    gir1.2-gstreamer-1.0 \
    gir1.2-gst-plugins-base-1.0 \
    gstreamer1.0-plugins-base \
    python-pip \
    python-setuptools \
    python-gi \
    python-gst-1.0

COPY requirements.txt /
RUN pip install -r /requirements.txt
