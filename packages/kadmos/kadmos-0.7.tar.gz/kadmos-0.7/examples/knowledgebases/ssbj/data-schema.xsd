<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <!-- definition of simple elements -->
    <xs:element name="tc" type="xs:decimal"/>
    <xs:element name="h" type="xs:decimal"/>
    <xs:element name="M" type="xs:decimal"/>
    <xs:element name="AR" type="xs:decimal"/>
    <xs:element name="Lambda" type="xs:decimal"/>
    <xs:element name="Sref" type="xs:decimal"/>
    <xs:element name="Cf" type="xs:decimal"/>
    <xs:element name="T" type="xs:decimal"/>
    <xs:element name="WT" type="xs:decimal"/>
    <xs:element name="WF" type="xs:decimal"/>
    <xs:element name="WE" type="xs:decimal"/>
    <xs:element name="D" type="xs:decimal"/>
    <xs:element name="L" type="xs:decimal"/>
    <xs:element name="Theta" type="xs:decimal"/>
    <xs:element name="ESF" type="xs:decimal"/>
    <xs:element name="fin" type="xs:decimal"/>
    <xs:element name="SFC" type="xs:decimal"/>
    <xs:element name="lambda" type="xs:decimal"/>
    <xs:element name="section" type="xs:decimal"/>
    <xs:element name="dpdx" type="xs:decimal"/>
    <xs:element name="R" type="xs:decimal"/>
    <xs:element name="DT" type="xs:decimal"/>
    <xs:element name="Temp" type="xs:decimal"/>
    <xs:element name="sigma" type="xs:string"/>

    <!-- definition of attributes -->
    <xs:attribute name="tool_name" type="xs:string"/>
    <xs:attribute name="in_or_output" type="xs:string"/>

    <!-- definition of complex elements -->
    <xs:element name="geometry">
      <xs:complexType>
        <xs:all>
            <xs:element ref="tc" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="AR" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="Lambda" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="Sref" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="Theta" minOccurs="0" maxOccurs="1"/>
        </xs:all>
      </xs:complexType>
    </xs:element>

    <xs:element name="weight">
      <xs:complexType>
        <xs:all>
            <xs:element ref="WE" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="WT" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="WF" minOccurs="0" maxOccurs="1"/>
        </xs:all>
      </xs:complexType>
    </xs:element>

    <xs:element name="other">
      <xs:complexType>
        <xs:all>
            <xs:element ref="D" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="L" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="Cf" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="T" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="DT" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="fin" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="SFC" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="dpdx" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="R" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="sigma" minOccurs="0" maxOccurs="1"/>
        </xs:all>
      </xs:complexType>
    </xs:element>

    <xs:element name="aircraft">
      <xs:complexType>
        <xs:all>
            <xs:element ref="geometry" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="weight" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="other" minOccurs="0" maxOccurs="1"/>
        </xs:all>
      </xs:complexType>
    </xs:element>

    <xs:element name="reference">
      <xs:complexType>
        <xs:all>
            <xs:element ref="h" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="M" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="ESF" minOccurs="1" maxOccurs="1"/>
            <xs:element ref="Temp" minOccurs="1" maxOccurs="1"/>
        </xs:all>
      </xs:complexType>
    </xs:element>

    <xs:element name="data_schema">
      <xs:complexType>
        <xs:all>
            <xs:element ref="aircraft" minOccurs="0" maxOccurs="1"/>
            <xs:element ref="reference" minOccurs="0" maxOccurs="1"/>
        </xs:all>
        <xs:attribute ref="tool_name" use="required"/>
        <xs:attribute ref="in_or_output" use="required"/>
      </xs:complexType>
    </xs:element>

</xs:schema>