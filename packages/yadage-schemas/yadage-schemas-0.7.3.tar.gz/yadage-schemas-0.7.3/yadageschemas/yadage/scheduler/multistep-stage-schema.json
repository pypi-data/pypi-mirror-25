{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Multiple Step Scheduler",
  "additionalProperties": false,
  "properties": {
    "scheduler_type": {
      "type": "string",
      "enum": [
        "multistep-stage"
      ]
    },
    "parameters": {"$ref":"parameterselection.json"},
    "step": {"$ref":"../../packtivity/packtivity-schema.json"},
    "workflow": {"$ref":"../workflow-schema.json#"},
    "batchsize": {
      "type": "number",
      "default": null
    },
    "partitionsize": {
      "type": "number",
      "default": null
    },
    "scatter": {
      "type":"object",
      "additionalProperties": false,
      "properties":{
        "parameters":{"type":"array","items":{"type":"string"}},
        "method":{"type":"string"}
      }
    }
  },
  "oneOf": [{
      "required": ["workflow"],
      "not": {"required": ["step"]}
  }, 
  {
      "required": ["step"],
      "not": {"required": ["workflow"]}
  }           
  ],
  "anyOf": [{
      "required": ["batchsize"],
      "not": {"required": ["partitionsize"]}
  }, 
  {
      "required": ["partitionsize"],
      "not": {"required": ["batchsize"]}
  },
  {
      "not": {"required": ["batchsize","partitionsize"]}
  }           
  ]
}