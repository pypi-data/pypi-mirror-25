            value:

        subnet_ids:
            description: List of subnets where the instances will be launched
            value:

        tags:
            description: A dict of tags to associate to the EC2 instances
            value: {}

        instance_types:
            description: A list of instance types
            value:
                - c4.large
                - c4.xlarge
                - c4.2xlarge
                - c4.4xlarge
                - c4.8xlarge

        iam_role_policies:
            description:
                A list of IAM policy docs to associate to the instances profile
            value: []

