#! /bin/sh

export observatory="$1"

unset CRDS_READONLY_CACHE

export CRDS_PATH=$HOME/crds_cache_test
export CRDS_SERVER_URL=https://${observatory}-crds-test.stsci.edu

crds sync --all --repair-files --check-sha1sum

export CRDS_PATH=$HOME/crds_cache_ops
export CRDS_SERVER_URL=https://${observatory}-crds.stsci.edu

crds sync --all --repair-files --check-sha1sum


