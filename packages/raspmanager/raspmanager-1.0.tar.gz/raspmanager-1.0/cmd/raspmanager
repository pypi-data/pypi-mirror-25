#!/usr/bin/env python

import sys

if sys.argv[-1] == "systemd":

    import os
    os.system("systemctl stop raspmanager")
    os.system("rm /etc/systemd/system/raspmanager.service")
    os.system("""

echo '''[Unit]
Description=Raspberry Manager

[Service]
Type=simple
ExecStart=/usr/bin/raspmanager

[Install]
WantedBy=multi-user.target
''' >> /etc/systemd/system/raspmanager.service
    """)

    os.system("systemctl daemon-reload")
    print("execute 'systemctl start raspmanager' for start daemon")
    sys.exit()

print("Run 'raspmanager systemd' as superuser for create a daemon.")
from raspmanager import main
