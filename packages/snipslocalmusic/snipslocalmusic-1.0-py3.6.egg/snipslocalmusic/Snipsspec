package_name: snipslocalmusic
class_name: SnipsLocalMusic
description: Play local music files
intents:
  - intent: PlayMusicCreativeWorkIntent
    action: |
      {%
      skill.play(intent.sourceCollectionOwnerName,
                 intent.sourceCollectionName,
                 intent.musicCreativeWorkSelect,
                 intent.musicCreativeWorkArtistName,
                 intent.musicCreativeWorkGenre,
                 intent.musicCreativeWorkContentSource,
                 intent.musicCreativeWorkComposerName,
                 intent.musicCreativeWorkName,
                 intent.musicCreativeWorkEra,
                 intent.musicCreativeWorkType)
      %}
  - intent: PlayMusicPlaylistIntent
    action: |
      {%
      skill.play_playlist(intent.musicPlaylistOwnerName,
                          intent.musicPlaylistName,
                          intent.playbackModeName,
                          intent.musicPlaylistSelect)
      %}
  - intent: StopMusicCreativeWorkIntent
    action: "stop"
  - intent: SuspendMusicCreativeWorkIntent
    action: "pause"
  - intent: ResumeMusicCreativeWorkIntent
    action: "resume"
